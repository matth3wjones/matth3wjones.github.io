<h1 class="headline">Log in</h1>

<div class="container">
  <div class="innerContainer">
    <div class="loginContainer">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="loginForm">
          <div class="field">
            <%= f.label :email, id: "email" %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "enter email", class: "field", id: "emailField" %>
          </div>

          <div class="field">
            <%= f.label :password, id: "password" %><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: "enter password", class: "field", id: "passwordField" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        </div>
        <div class="actions">
          <%= f.submit "Log in", class: "submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
